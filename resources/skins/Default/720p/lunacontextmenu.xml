<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="fade" time="300" start="0" end="100">WindowOpen</animation>
    <animation effect="fade" time="300" start="100" end="0">WindowClose</animation>
    <controls>
        <control type="list" id="70">
            <centerleft>50%</centerleft>
            <width>440</width>
            <height>auto</height>
            <onup>noop</onup>
            <ondown>noop</ondown>
            <itemgap>0</itemgap>
            <align>center</align>
            <itemlayout width="440" height="55">
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>340</top>
                    <width>250</width>
                    <height>55</height>
                    <texture colordiffuse="CC000000">common/white.png</texture>
                </control>
                <control type="label">
                    <centerleft>50%</centerleft>
                    <top>350</top>
                    <width>440</width>
                    <height>47</height>
                    <font>Small</font>
                    <aligny>top</aligny>
                    <textcolor>FF808080</textcolor>
                    <selectedcolor>green</selectedcolor>
                    <align>center</align>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="440" height="55">
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>340</top>
                    <width>250</width>
                    <height>55</height>
                    <texture colordiffuse="CC000000">common/white.png</texture>
                </control>
                <control type="label">
                    <centerleft>50%</centerleft>
                    <top>350</top>
                    <width>440</width>
                    <height>47</height>
                    <font>Small</font>
                    <aligny>top</aligny>
                    <textcolor>FFE0B074</textcolor>
                    <selectedcolor>green</selectedcolor>
                    <align>center</align>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>