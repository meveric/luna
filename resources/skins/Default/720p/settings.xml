<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- addonsettings -->
    <animation type="WindowOpen">
        <effect type="slide" start="0,80" end="0,0" center="auto" tween="back" easing="out" time="300"/>
        <effect type="fade" start="0" end="100" time="300"/>
    </animation>
    <animation type="WindowClose">
        <effect type="fade" start="100" end="0" time="100"/>
    </animation>

    <controls>

        <!-- Background -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1280</width>
            <height>720</height>
            <texture>common/DialogBackground_old.png</texture>
        </control>

        <!-- Heading -->
        <control type="label" id="20">
            <left>100</left>
            <top>64</top>
            <width>1620</width>
            <height>72</height>
            <font>XLarge</font>
            <label>Settings</label>
        </control>

        <!-- Left grouplist -->
        <control type="panel" id="302">
            <left>100</left>
            <top>152</top>
            <width>360</width>
            <height>660</height>
            <itemgap>0</itemgap>
            <onleft>noop</onleft>
            <onup>noop</onup>
            <ondown>9001</ondown>
            <orientation>vertical</orientation>
            <scrolltime tween="sine" easing="out">240</scrolltime>
            <itemlayout width="360" height="44">
                <control type="label">
                    <left>0</left>
                    <top>0</top>
                    <width>360</width>
                    <height>44</height>
                    <font>Small</font>
                    <aligny>top</aligny>
                    <textcolor>FF808080</textcolor>
                    <selectedcolor>green</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="360" height="44">
                <control type="label">
                    <left>0</left>
                    <top>0</top>
                    <width>360</width>
                    <height>44</height>
                    <font>Small</font>
                    <aligny>top</aligny>
                    <textcolor>FFE0B074</textcolor>
                    <selectedcolor>green</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>

        <!-- Button grouplist -->
        <control type="grouplist" id="9001">
            <left>400</left>
            <top>617</top>
            <width>798</width>
            <itemgap>0</itemgap>
            <onleft>9</onleft>
            <onright>noop</onright>
            <onup>302</onup>
            <ondown>noop</ondown>
            <defaultcontrol>10</defaultcontrol>
            <orientation>horizontal</orientation>

            <!-- OK Button -->
            <control type="button" id="303">
                <width>266</width>
                <label>186</label>
            </control>

            <!-- Cancel Button -->
            <control type="button" id="304">
                <width>266</width>
                <label>222</label>
            </control>
        </control>
    </controls>
</window>
